<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.wendyfu.bakingapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".BakingAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.github.wendyfu.bakingapp.recipelist.presentation.RecipeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".recipedetail.presentation.RecipeDetailActivity"/>
        <activity
            android:name=".recipestep.RecipeStepActivity"
            android:theme="@style/PlayerTheme"/>
        <activity android:name=".widget.presentation.view.SimpleRecipeWidgetConfigurationActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver android:name=".widget.SimpleRecipeWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/simple_recipe_widget_info"/>
        </receiver>

    </application>

</manifest>