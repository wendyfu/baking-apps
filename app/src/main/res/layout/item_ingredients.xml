<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_4dp"
    android:paddingLeft="@dimen/dimen_24dp"
    android:paddingRight="@dimen/dimen_24dp"
    android:paddingTop="@dimen/dimen_4dp">

    <TextView
        android:id="@+id/text_quantity_measure"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="@dimen/ingredient_recipe_list_width"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_ingredient"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack70"
        app:layout_constraintLeft_toRightOf="@+id/text_quantity_measure"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_quantity_measure"/>

</android.support.constraint.ConstraintLayout>